<div class="row">
  <div class="col-xs-12">

    <h3 class="text-center">The Thing...</h2>
    <dl class="dl-horizontal">
      <dt>App</dt>
      <dd>{{title}}</dd>
      {{# if urlActive}}
        <dt>Url</dt>
        <dd><a target="_blank" {{bindAttr href="url"}}>{{url}}</a></dd>
      {{/if}}
    </dl>

    {{#if this.tools}}
      <h3 class="text-center">
        Tools I used to build the Thing...
      </h3>
      {{#each tools}}
        {{this.name}}</br>
      {{/each}}
    {{/if}}
  </div>
</div>
