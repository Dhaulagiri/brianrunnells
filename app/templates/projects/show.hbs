<div class="row">
  <div class="col-xs-12">

    <h3 class="text-center">The Thing...</h3>
    <dl class="dl-horizontal">
      <dt>What it's called</dt>
      <dd>{{title}}</dd>

      {{# if urlActive}}
        <dt>Where it is</dt>
        <dd><a target="_blank" href={{url}}>{{url}}</a></dd>
      {{/if}}
      {{# if repoUrl}}
        <dt>Where the code is</dt>
        <dd><a target="_blank" href={{repoUrl}}>{{repoUrl}}</a></dd>
      {{/if}}
    </dl>

    {{# if description}}
      <div id="description">
        <h4 class="text-center">
          What the Thing does
        </h4>
        <p>{{description}}</p>
      </div>
    {{/if}}

    {{#if this.tools}}
      <h4 class="text-center">
        Tools I used to build the Thing...
      </h4>
      <ul>
        {{#each tool in tools}}
          <li>{{tool.name}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </div>
</div>
